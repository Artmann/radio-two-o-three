    "@types/jest": "^29.0.2",
    "@types/lodash": "^4.14.185",
    "@types/node": "^18.7.18",
    "@types/node-fetch": "^2.6.2",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "eslint": "^8.20.0",
    "jest": "^29.0.3",
