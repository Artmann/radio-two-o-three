    "@sentry/minimal": "^6.11",
    "@sentry/node": "^6.11",
    "@sentry/tracing": "^6.11",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.5",
    "dotenv": "^9",
    "esix": "^3.2.1",
    "express": "^4.18.1",
    "framer-motion": "^7.3.5",
    "lodash": "^4.17.21",
    "mongo-mock": "^4.1.0",
    "mongodb": "^3.7.3",
    "morgan": "^1.10.0",
    "node-fetch": "^2",
    "node-podcast-parser": "^2.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
